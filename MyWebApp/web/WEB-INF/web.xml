<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>dbUser</param-name>
        <param-value>webuser</param-value>
    </context-param>
    <context-param>
        <param-name>dbPassword</param-name>
        <param-value>ahdfhadsfh</param-value>
    </context-param>
    <servlet>
        <servlet-name>AlohaServlet</servlet-name>
        <servlet-class>AlohaServlet</servlet-class>
        <init-param>
            <param-name>welcomeMessage</param-name>
            <param-value>Welcome to Course 323!</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>DisplayFruitsServlet</servlet-name>
        <servlet-class>com.acme.DisplayFruitsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WelcomeServlet</servlet-name>
        <servlet-class>com.acme.WelcomeServlet</servlet-class>
        <init-param>
            <param-name>welcomeMessage</param-name>
            <param-value>Welcome!!</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>DetectBrowserString</servlet-name>
        <servlet-class>com.acme.DetectBrowserString</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AlohaServlet</servlet-name>
        <url-pattern>/AlohaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisplayFruitsServlet</servlet-name>
        <url-pattern>/DisplayFruitsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WelcomeServlet</servlet-name>
        <url-pattern>/WelcomeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DetectBrowserString</servlet-name>
        <url-pattern>/DetectBrowserString</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
